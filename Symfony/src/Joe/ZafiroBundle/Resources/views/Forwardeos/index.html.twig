{% extends 'JoeZafiroBundle:Default:base.html.twig' %}

{% block body -%}
    <h1>Forwardeos list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>ID</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Tipo</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('forwardeos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.ipsrc }}:{{ entity.puesrc }}</td>
                <td>{{ entity.ipdst }}:{{ entity.puedst }}</td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.nombreestado }}</td>
                <td>
                    <a href="{{ path('forwardeos_show', { 'id': entity.id }) }}">show</a>
                    <a href="{{ path('forwardeos_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('forwardeos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
