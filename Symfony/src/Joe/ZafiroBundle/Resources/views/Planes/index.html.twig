{% extends 'JoeZafiroBundle:Default:base.html.twig' %}

{% block body -%}
    <h1>Planes list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Estado</th>
                <th>Nombre</th>
                <th>Valor</th>
                <th>BW Actual</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('planes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.valor }}</td>
                <td>{{ entity.bwactual }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('planes_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('planes_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('planes_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
