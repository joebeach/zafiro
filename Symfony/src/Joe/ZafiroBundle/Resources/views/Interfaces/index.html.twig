{% extends 'JoeZafiroBundle:Default:base.html.twig' %}

{% block body -%}
    <h1>Interfaces list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Device</th>
                <th>Descripcion</th>
                <th>Ip</th>
                <th>Netmask</th>
                <th>Network</th>
                <th>Broadcast</th>
                <th>Gateway</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('interfaces_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.device }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.ip }}</td>
                <td>{{ entity.netmask }}</td>
                <td>{{ entity.network }}</td>
                <td>{{ entity.broadcast }}</td>
                <td>{{ entity.gateway }}</td>
                <td>{{ entity.enabled }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('interfaces_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('interfaces_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('interfaces_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
